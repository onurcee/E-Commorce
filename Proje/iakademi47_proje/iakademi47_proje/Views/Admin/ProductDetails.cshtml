@model Product
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
	iakademi47Context context = new iakademi47Context();
}


<!-- BEGIN SAMPLE TABLE PORTLET-->
<div class="portlet box red">
	<div class="portlet-title">
		<div class="caption">
			<i class="fa fa-cogs"></i>@Html.DisplayFor(model => model.ProductName) Ürün Detayları
		</div>
		<div class="tools">
			<a href="javascript:;" class="collapse">
			</a>
			<a href="#portlet-config" data-toggle="modal" class="config">
			</a>
			<a href="javascript:;" class="reload">
			</a>
			<a href="javascript:;" class="remove">
			</a>
		</div>
	</div>
	<div class="portlet-body">
		<div class="table-responsive">
			<table class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.ProductID)
						</th>
						<td>
							@Html.DisplayFor(model => model.ProductID)
						</td>
					</tr>


					<tr>
						<th>
							@Html.DisplayNameFor(model => model.ProductName)
						</th>
						<td>
							@Html.DisplayFor(model => model.ProductName)
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.UnitPrice)
						</th>
						<td>
							@Html.DisplayFor(model => model.UnitPrice)
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.CategoryID)
						</th>
						<td>
							  @{                                            
                                                string? CategoryName = context.Categories.FirstOrDefault(c => c.CategoryID == Model.CategoryID).CategoryName;
                                                @CategoryName
                                           }
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.SublierID)
						</th>
						<td>
							@{                                            
                                                string? BrandName = context.Suppliers.FirstOrDefault(s => s.SupplierID == Model.SublierID).BrandName;
                                                @BrandName
                                           }
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Stock)
						</th>
						<td>
							@Html.DisplayFor(model => model.Stock)
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Discount)
						</th>
						<td>
							@Html.DisplayFor(model => model.Discount)
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.StatusID)
						</th>
						<td>
							@{                                            
                                                string? StatusName = context.Statuses.FirstOrDefault(st => st.StatusID == Model.StatusID).StatuName;
                                                @StatusName
                                           }
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.AddDate)
						</th>
						<td>
							@{
								DateTime addDate = Model.AddDate; 
								string formattedDate = addDate.ToString("dd.MM.yyyy - HH:mm"); 
							}
							@formattedDate 
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Keywords)
						</th>
						<td>
							@Html.DisplayFor(model => model.Keywords)
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Kdv)
						</th>
						<td>
							@Html.DisplayFor(model => model.Kdv)
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.HighLighted)
						</th>
						<td>
							@Html.DisplayFor(model => model.HighLighted)
						</td>
					</tr>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.TopSeller)
						</th>
						<td>
							@Html.DisplayFor(model => model.TopSeller)
						</td>
					</tr>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Related)
						</th>
						<td>
							@Html.DisplayFor(model => model.Related)
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Notes)
						</th>
						<td>
							@Html.DisplayFor(model => model.Notes)
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.PhotoPath)
						</th>
						<td>
							 <img src="~/img/resimler/@Model.PhotoPath" style="width:250px; height:250px" />
						</td>
					</tr>

					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Active)
						</th>
						<td>
							@Html.DisplayFor(model => model.Active)
							@ViewBag.productname2
						</td>
					</tr>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.ParentID)
						</th>
						<td>
							@Html.DisplayFor(model => model.ParentID)
						</td>
					</tr>

				</thead>
			</table>
		</div>
	</div>
</div>
<!-- END SAMPLE TABLE PORTLET-->

