@model Status
@{
    ViewData["Title"] = "StatusCreate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row" style="margin-top:50px;">

	<div class="col-md-2"></div>

	<div class="col-md-8">

		<!-- BEGIN SAMPLE FORM PORTLET-->
					<div class="portlet box green ">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-gift"></i> Statü Giriş Formu
							</div>
							<div class="tools">
								<a href="" class="collapse">
								</a>
								<a href="#portlet-config" data-toggle="modal" class="config">
								</a>
								<a href="" class="reload">
								</a>
								<a href="" class="remove">
								</a>
							</div>
						</div>
						<div class="portlet-body form">
							<form class="form-horizontal" role="form" asp-action="StatusCreate" method="post">
								<div class="form-body">


									<div class="form-group">
										<label class="col-md-3 control-label" asp-for="StatuName"></label>
										<div class="col-md-9">
											<input type="text" class="form-control input-lg" placeholder="Statü Adı" asp-for="StatuName" required maxlength="50">
										</div>
									</div>

									<div class="form-group">
										<label class="col-md-3 control-label">Aktif mi?</label>
										<div class="col-md-9">
								<input asp-for="Active" class="form-control input-lg" />
										</div>
									</div>

								</div>
								<div class="form-actions right1">
								<a asp-action="StatusIndex" class="btn btn-primary">Statü Listesi</a>
									<input type="submit" class="btn green" value="Kaydet"/>
								</div>
							</form>
						</div>
					</div>
					<!-- END SAMPLE FORM PORTLET-->

		</div>
		</div>

